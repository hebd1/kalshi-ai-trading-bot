# ========================================
# TRADING MODE CONFIGURATION
# ========================================
# Set to "live" for PRODUCTION trading or "demo" for paper trading
# ⚠️  WARNING: "live" mode uses real money!
TRADING_MODE=demo

# ========================================
# DEMO/TEST API CREDENTIALS (Default)
# ========================================
# Kalshi Demo API Configuration
# Get your API key from: https://trading.kalshi.com/settings/api
KALSHI_API_KEY=your_demo_kalshi_api_key_here
KALSHI_PRIVATE_KEY=keys/kalshi_private_key.pem
KALSHI_BASE_URL=https://demo-api.kalshi.co

# ========================================
# PRODUCTION API CREDENTIALS
# ========================================
# ⚠️  ONLY use these for LIVE TRADING with real money!
# Get production API key from: https://trading.kalshi.com/settings/api
KALSHI_API_KEY_PROD=your_prod_kalshi_api_key_here
KALSHI_PRIVATE_KEY_PROD=keys/kalshi_private_key.prod.pem
KALSHI_BASE_URL_PROD=https://api.elections.kalshi.com

# ========================================
# AI API CONFIGURATION
# ========================================
# xAI API Configuration  
# Get your API key from: https://console.x.ai/
XAI_API_KEY=your_xai_api_key_here

# OpenAI API Configuration (fallback)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ========================================
# DEPRECATED (Use TRADING_MODE instead)
# ========================================
# Legacy setting - kept for backward compatibility
LIVE_TRADING_ENABLED=false

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_FILE_LOGGING=true
ENABLE_CONSOLE_LOGGING=true

# Database Configuration
DATABASE_URL=sqlite:///trading_system.db

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_LOG_INTERVAL_MINUTES=15 